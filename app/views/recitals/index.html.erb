<p id="notice"><%= notice %></p>

<h1>Listing Recitals</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Meta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recitals.each do |recital| %>
      <tr>
        <td><%= recital.title %></td>
        <td><%= recital.body %></td>
        <td><%= recital.meta %></td>
        <td><%= link_to 'Show', recital %></td>
        <td><%= link_to 'Edit', edit_recital_path(recital) %></td>
        <td><%= link_to 'Destroy', recital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

