<p id="notice"><%= notice %></p>

<h1>Listing Preambles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Meta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preambles.each do |preamble| %>
      <tr>
        <td><%= preamble.title %></td>
        <td><%= preamble.body %></td>
        <td><%= preamble.meta %></td>
        <td><%= link_to 'Show', preamble %></td>
        <td><%= link_to 'Edit', edit_preamble_path(preamble) %></td>
        <td><%= link_to 'Destroy', preamble, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

